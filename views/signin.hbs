{{#> card }}
  <h1>Sign In</h1>
  <form class="pure-form pure-form-stacked" method="POST" id="signinForm">
    <input id="username" name="username" class="card-width" type="text" placeholder="Username/Phone Number">
    {{#if error}}
      <span class="error">{{error}}</span>
    {{/if}}
    <button type="submit" class="card-width pure-button pure-button-primary">Sign in</button>
  </form>
{{/card}}
